{
  "name": "@metalsmith/sass",
  "version": "1.0.0",
  "description": "A Metalsmith plugin to compile SASS/SCSS files",
  "keywords": [
    "sass",
    "scss",
    "styling",
    "metalsmith-plugin",
    "metalsmith",
    "static-site"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalsmith/sass.git"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "author": "Kevin Van Lierde (https://webketje.com)",
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/metalsmith/sass/issues"
  },
  "homepage": "https://github.com/metalsmith/sass#readme",
  "dependencies": {
    "debug": "^4.3.4",
    "sass": "^1.53.0"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "jstransformer-handlebars": "^1.2.0",
    "metalsmith": "^2.4.1",
    "metalsmith-in-place": "^4.4.2",
    "mocha": "^9.2.2",
    "node_module_sass": "./test/fixtures/loading_nodemodule/lib/node_module_sass",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.1.1"
  },
  "peerDependencies": {
    "metalsmith": "^2.4.1"
  },
  "scripts": {
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it .",
    "test": "nyc mocha -t 5000"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
