{
  "name": "@metalsmith/sass",
  "version": "1.2.0",
  "description": "A Metalsmith plugin to compile SASS/SCSS files",
  "keywords": [
    "sass",
    "scss",
    "styling",
    "metalsmith-plugin",
    "metalsmith",
    "static-site"
  ],
  "source": "src/index.js",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "type": "module",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalsmith/sass.git"
  },
  "files": [
    "lib"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "types": "lib/index.d.ts",
  "author": "Kevin Van Lierde (https://webketje.com)",
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/metalsmith/sass/issues"
  },
  "homepage": "https://github.com/metalsmith/sass#readme",
  "dependencies": {
    "sass": "^1.56.1"
  },
  "devDependencies": {
    "@metalsmith/in-place": "^4.5.0",
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "jstransformer-handlebars": "^1.2.0",
    "metalsmith": "^2.5.0",
    "microbundle": "^0.15.1",
    "mocha": "^9.2.2",
    "node_module_sass": "./test/fixtures/loading_nodemodule/lib/node_module_sass",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.2.0"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.0"
  },
  "scripts": {
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it .",
    "build": "microbundle --target node --no-sourcemap -f cjs,esm --strict --generateTypes=false",
    "pretest": "npm run build",
    "test": "nyc mocha -t 5000"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
